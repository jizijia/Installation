<Window x:Class="Installation.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installation"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="{x:Null}" 
        AllowsTransparency="True"
        Title="MessageBox" Height="187" Width="300" >
    <Grid  Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="36"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" >
            <Label x:Name="txtTitle" Style="{DynamicResource MetroTitleLabel}">提醒</Label>
        </StackPanel>
        <StackPanel  Grid.Row="1"  >
            <Label x:Name="txtContent" Margin="50 0 0 0">提醒</Label>
        </StackPanel >
        <StackPanel  Grid.Row="2"  VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Content="确定"  Background="{DynamicResource OringeBrush1}"  IsEnabled="False" BorderThickness="0"></Button>
        </StackPanel>
    </Grid>
</Window>
